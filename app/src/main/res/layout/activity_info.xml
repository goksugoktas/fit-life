<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    android:fillViewport="false"
    android:orientation="vertical"
    android:overScrollMode="never"
    tools:context=".activity.InfoActivity">

    <!--    Bu sayfada bilgilendirme yazıları yazmaktadır-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:src="@drawable/baseline_arrow_back_ios_new_24"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Bilgilendirme"
                android:textColor="@color/white"
                android:textSize="20sp" />


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Egzersiz ve Kalori Arasındaki İlişki"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif"
                    android:text="Egzersiz ve kalori ihtiyacı arasındaki ilişki, kilo kontrolü açısından önemlidir. Egzersiz yapmak, kalori yakmaya yardımcı olarak kilo verme sürecini destekler. Ayrıca, egzersiz yapmak kas kütlesini artırarak bazal metabolizma hızını yükseltir. Bu da daha fazla kalori yakmaya yardımcı olur."
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Günlük Kalori"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif"
                    android:text="Günlük kalori ihtiyacı ise kişinin günlük aktivite seviyesine göre değişir. Hareketsiz bir yaşam tarzına sahip olan kişilerin kalori ihtiyacı daha düşükken, aktif bir yaşam tarzına sahip olan kişilerin kalori ihtiyacı daha yüksektir."
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginVertical="16dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Egzersizin Önemi"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif"
                    android:text="Günlük egzersiz miktarı, kişinin yaş, cinsiyet, vücut ağırlığı, aktivite seviyesi ve sağlık durumuna göre değişir. Genel olarak, yetişkinlerin haftada en az 150 dakika orta düzeyde veya 75 dakika şiddetli aerobik aktivite yapması önerilir. Bu aktivitelere yürüyüş, koşu, bisiklete binme, yüzme, dans etme ve ip atlama gibi aktiviteler örnek olarak verilebilir"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/btnContinue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif"
                android:paddingHorizontal="64dp"
                android:paddingVertical="16dp"
                android:text="Devam Et"
                android:textColor="@color/white"
                android:textSize="22sp" />


        </LinearLayout>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>